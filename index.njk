---
layout: base.njk
title: Home
---
<div class="posts">
  {% for post in collections.posts %}
    <article class="post-preview">
      <h2>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>
      <time datetime="{{ post.date }}">{{ post.date | dateToString }}</time>
      {% if post.data.subtitle %}
        <p>{{ post.data.subtitle }}</p>
      {% endif %}
    </article>
  {% endfor %}
</div>